/**index.wxss**/
page{
   /* background-color: #548CD7;  */
  position: relative;
  z-index: -999;
  
}
image{
  width: 100%;
  height: 100%;
}
.slide-image{
  width: 100%;
  height:200px;
}
swiper{
  height:180px;
  margin-bottom:10px;
}
.itemaa{
  height:300px;
}
.selection2{
  border-bottom: 4px solid #ddd;
}
.header{
  border-left:3px solid #1AAD19;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  padding: 0 30rpx;
  margin: 10rpx 0;
}
.text-all{
  color: #1AAD19;
  font-size: 14px;
}
.cont{
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}
.cont-item{
  height: 250rpx;
  width: 45%;
  background-color: pink;
   margin: 4px; 
   position: relative;
  
}
.cont-item-text{
  text-align: center;
  position:absolute;
  bottom:0;
  color: #fff;
  font-size: 14px;
  background: -webkit-linear-gradient(bottom,rgba(0,0,0,0.5),rgba(0,0,0,0));
  height: 125rpx;
  width: 93%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding: 0 1% 2% 6%;
}
.swiper-text{
  width: 100%;
  color: #555;
  background-color: #eee;
  height:30px;
  line-height: 30px;
  text-align: center;
  position:absolute;
  bottom:0;
  font-size: 14px;
  opacity: 0.8;
}
.list-item{
  width: 100%;
}
.list-item-images{
  height: 360rpx;
  width: 100%;
  position: relative;
}
.list-item-text{
  height: 200rpx;
  width: 94%;
  /* background-color: #eee; */
  padding:0 3% ;
}
.avatar{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  position: absolute;
  bottom: -60rpx;
  right: 84rpx;
}
.list-item-text-content{
    font-size: 12px;
    color:#aaa;
}
.cont_article{ 
    margin-top: 15px;
    width: 98%;
    overflow: hidden;
    text-overflow: ellipsis;
    display:-webkit-box; 
    -webkit-box-orient:vertical;
    -webkit-line-clamp:2; 
}

